{#
/**
 * @file
 * Template for a 2 column panel layout with sidebar.
 */
#}
<div class="uk-container uk-container-center dc-panel-forum" {% if css_id %}{{ css_id }}{% endif %}>
  <div class="uk-grid uk-grid-small" uk-grid>
    <div class="uk-width-4-5@m uk-child-width-1-1@m">
      <div>
        {{ content.top }}
      </div>
      <div>
        {{ content.body }}
      </div>
      <div>
        {{ content.bottom }}
      </div>
    </div>
    <div class="uk-width-1-5@m">
      {{ content.sidebar }}
    </div>
  </div>
</div>
